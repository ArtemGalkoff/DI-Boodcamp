{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",            // сюда будет компилироваться JS
    "rootDir": ".",                // текущая директория — backend
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true
  },
  "include": ["*.ts", "controllers/*.ts", "models/*.ts", "routes/*.ts", "src"],
  "exclude": ["node_modules"]
}