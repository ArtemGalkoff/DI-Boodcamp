{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",           
    "rootDir": ".",                
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true
  },
  "include": ["*.ts", 
  "controllers/*.ts",
   "models/*.ts", 
   "routes/*.ts",
    "services/*.ts",
     "config/*.ts", 
     "middleware/*.ts",
     "socket/*.ts",
     "utils/*.ts"
    ],
  "exclude": ["node_modules"]
}